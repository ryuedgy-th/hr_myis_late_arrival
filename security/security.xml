<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Late Arrival Manager Group -->
        <record id="group_late_arrival_manager" model="res.groups">
            <field name="name">Late Arrival Manager</field>
            <field name="category_id" ref="hr.module_category_human_resources"/>
            <field name="implied_ids" eval="[(4, ref('hr.group_hr_user'))]"/>
            <field name="comment">
                Can approve late arrivals and access all late arrival reports
            </field>
        </record>

        <!-- Record Rules -->
        <record id="hr_attendance_rule_late_own" model="ir.rule">
            <field name="name">Late Arrival: Own Records</field>
            <field name="model_id" ref="hr_attendance.model_hr_attendance"/>
            <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>

        <record id="hr_attendance_rule_late_manager" model="ir.rule">
            <field name="name">Late Arrival: Manager Access</field>
            <field name="model_id" ref="hr_attendance.model_hr_attendance"/>
            <field name="domain_force">['|',
                ('employee_id.parent_id.user_id', '=', user.id),
                ('employee_id.department_id.manager_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('hr.group_hr_manager'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>
    </data>
</odoo>
